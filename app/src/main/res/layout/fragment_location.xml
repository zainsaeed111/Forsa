<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8"
    tools:context=".Vendor.Location">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:forceDarkAllowed="false"
        android:orientation="vertical"
        android:background="#F8F8F8"
        android:padding="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelecetcountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="@dimen/_18sdp"
            android:background="@drawable/edittext_bg_vendor"
            android:inputType="text"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/location_addcountry_icon"
            android:text="Select Country"
            android:fontFamily="@font/sf_one"
            >
        </androidx.appcompat.widget.AppCompatButton>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="City"
            android:fontFamily="@font/sf_one"
            android:textColor="@color/black" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_bg_vendor"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:fontFamily="@font/sf_one"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="@color/black">

        </com.google.android.material.textfield.TextInputEditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Location"
            android:fontFamily="@font/sf_one"
            android:textColor="@color/black" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_bg_vendor"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:drawableEnd="@drawable/location_picklocation_icon"
            android:fontFamily="@font/sf_one"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="@color/black">

        </com.google.android.material.textfield.TextInputEditText>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_one"
            android:textColor="@color/second"
            android:text="Pick from Profile" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/additemNextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/button_bg_vendor"
            android:fontFamily="@font/sf_one"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp">


        </androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>